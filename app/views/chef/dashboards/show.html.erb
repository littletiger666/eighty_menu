<div class="weui-panel weui-panel_access">
    <div class="weui-panel__hd">菜谱列表</div>
    <div class="weui-panel__bd">
      <% current_user.recipes.each do |recipe| %>
        <a href="javascript:void(0);" class="weui-media-box weui-media-box_appmsg">
          <div class="weui-media-box__hd">
              <img class="weui-media-box__thumb" src="<%= recipe.image %>" alt="">
          </div>
          <div class="weui-media-box__bd">
            <h4 class="weui-media-box__title"><%= recipe.name %></h4>
            <p class="weui-media-box__desc"><%= recipe.introduction %></p>
          </div>
        </a>
      <% end %>
    </div>
    <div class="weui-panel__ft">
        <a href="javascript:void(0);" class="weui-cell weui-cell_access weui-cell_link">
            <div class="weui-cell__bd">查看更多</div>
            <span class="weui-cell__ft"></span>
        </a>
    </div>
</div>
<div class="weui-panel weui-panel_access">
    <div class="weui-panel__hd">订单列表</div>
    <div class="weui-panel__bd">
      <% current_user.orders.each do |order| %>
        <a href="javascript:void(0);" class="weui-media-box weui-media-box_appmsg">
            <div class="weui-media-box__hd">
                <img class="weui-media-box__thumb" src="<%= order.recipe.image %>" alt="">
            </div>
            <div class="weui-media-box__bd">
                <h4 class="weui-media-box__title"><%= order.recipe.name %></h4>
                <p class="weui-media-box__desc"><%= order.recipe.introduction %></p>
            </div>
        </a>
      <% end %>
    </div>
</div>
